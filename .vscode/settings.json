{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/CVS": true,
    ".astro": true,
    "node_modules": true
  },
  "hide-files.files": [".astro", "node_modules"],
  // Prettier settings
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
    "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
}
