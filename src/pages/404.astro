---
import BasicLayout from "@/layouts/Basic.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/consts";
---

<BasicLayout
  title={SITE_TITLE}
  description={SITE_DESCRIPTION}
  image={`/thumbnails/404.jpg`}
>
  <main class="flex h-screen w-full flex-col items-center justify-center">
    <div
      class="flex w-full flex-col items-center justify-center bg-black p-2 text-center text-white"
    >
      <h1 class="responsive-title pt-20 leading-[25vw]">404</h1>
      <h2 class="heading1 py-20">
        Oops... let's rediret you to the <a href="/">homepage</a>
      </h2>
    </div>
  </main>
</BasicLayout>

<style>
  body {
    animation: wavePattern 4s ease-in-out infinite;
    background:
      linear-gradient(45deg, #000 25%, transparent 25%) -50px 0,
      linear-gradient(-45deg, #000 25%, transparent 25%) -50px 0,
      linear-gradient(45deg, #000 25%, transparent 25%) 0px 0,
      linear-gradient(-45deg, #000 25%, transparent 25%) 0px 0;
    background-size: 200px 200px;
    background-repeat: repeat;
    width: 100vw;
    height: 50vh;
  }

  @keyframes wavePattern {
    0% {
      background-position:
        0 0,
        50px 50px,
        0 0,
        50px 50px;
    }
    25% {
      background-position:
        0 50px,
        50px 0,
        0 50px,
        50px 0;
    }
    50% {
      background-position:
        0 0,
        50px 50px,
        0 0,
        50px 50px;
    }
    75% {
      background-position:
        0 -50px,
        50px 0,
        0 -50px,
        50px 0;
    }
    100% {
      background-position:
        0 0,
        50px 50px,
        0 0,
        50px 50px;
    }
  }
</style>
