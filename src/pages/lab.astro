---
import BasicLayout from "@/layouts/Basic.astro";
import Column from "@/components/Column.astro";
import LabCard from "@/components/LabCard.astro";
import labCards from "@/docs/lab.yml";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/consts";

const allTags = [...new Set(labCards.flatMap((card) => card.tags))];
---

<BasicLayout title={`Lab — ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
  <main class="w-full px-2">
    <h1
      class="fade-in w-full self-center text-[30vw] leading-tight tracking-tighter"
    >
      Lab
    </h1>
    <!-- Tag Filter UI -->
    <!-- <details
      id="tag-filters"
      class="heading3 mb-20 flex w-max flex-wrap gap-x-4"
      open
    >
      <summary class="tag-button active cursor-pointer" data-tag="all"
        >Lab — All</summary
      >
      <div class="flex flex-row gap-x-4">
        {
          allTags.map((tag) => (
            <button class="tag-button cursor-pointer" data-tag={tag}>
              {tag}
            </button>
          ))
        }
      </div>
    </details> -->

    <div
      class="grid grid-cols-1 items-end gap-x-4 gap-y-8 md:grid-cols-3 md:gap-y-20 lg:grid-cols-5"
    >
      {
        labCards.map((card) => (
          <LabCard
            title={card.title}
            description={card.description}
            href={card.href}
            image={card.image}
            imageAlt={card.imageAlt}
            tags={card.tags}
          />
        ))
      }
    </div>
  </main>
</BasicLayout>

<script is:inline>
  const buttons = document.querySelectorAll(".tag-button");
  const cards = document.querySelectorAll("[data-tags]");

  buttons.forEach((btn) => {
    btn.addEventListener("click", () => {
      const tag = btn.dataset.tag;
      buttons.forEach((b) => b.classList.remove("active"));
      btn.classList.add("active");

      cards.forEach((card) => {
        const cardTags = card.dataset.tags.split(",");
        const show = tag === "all" || cardTags.includes(tag);
        card.style.display = show ? "" : "none";
      });
    });
  });
</script>
