---
// Media.astro
const {
  src,
  alt,
  isVideo = false,
  scaling = 1,
  cropped = false,
  className = "",
  widthAuto = false,
} = Astro.props;
import { Image } from "astro:assets";

const base = import.meta.env.BASE_URL;
const posterSrc = "posters" + src.replace(/\.(mp4|webm|ogg)$/i, ".jpg");
---

{
  isVideo ? (
    <video
      preload="auto"
      src={src}
      poster={posterSrc || src.replace(/\.(mp4|webm|ogg)$/i, ".jpg")}
      autoplay
      loop
      muted
      playsinline
      webkit-playsinline
      class={`fade-in media *:h-auto ${widthAuto ? "w-auto" : "w-full"} object-cover ${cropped ? "[clip-path:inset(-3px)]" : ""} ${className}`}
      style={{ transform: `scale(${scaling})` }}
      alt={alt}
    >
      Your browser does not support the video tag.
    </video>
  ) : (
    <img
      src={src}
      alt={alt}
      loading="lazy"
      decoding="async"
      class={`fade-in media h-auto ${widthAuto ? "w-auto" : "w-full"} object-cover ${cropped ? "[clip-path:inset(-3px)]" : ""} ${className}`}
    />
  )
}
