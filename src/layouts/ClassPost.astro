---
import { marked } from "marked"; // install via npm i marked
import BasicLayout from "./Basic.astro";
import { SITE_TITLE } from "@/consts";

const {
  title,
  school,
  date,
  description,
  buttons,
  archived,
  index,
  department,
  credits,
  room,
  time,
} = Astro.props;
---

<BasicLayout title={`${title} â€” ${SITE_TITLE}`} description={description}>
