---
import BaseHead from "@/components/global/BaseHead.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={"clock"} description={"clock"} />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.11.1/p5.js"
    ></script>

    <meta charset="utf-8" />
  </head>
  <body>
    <main transition:animate="none" transition:persist>
      <slot />
    </main>
    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
      }
      canvas {
        display: block;
      }
    </style>
  </body>
</html>
