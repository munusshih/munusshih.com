---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, tags, updatedDate, heroImage, roles } =
  Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        width: 100%;
      }
      .prose {
        margin: auto;
        max-width: 100%;
        color: rgb(var(--gray-dark));
      }
      .title {
        display: grid;
        grid-template-columns: 1fr 1fr;
        margin-bottom: 1em;
        padding: 1em 0;
        line-height: 1.25;
        text-align: left;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }

      ul {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin: 0;
        padding: 0;
        list-style-type: none;
      }

      .date-tags {
        display: flex;
        color: rgb(var(--gray));
      }

      .date-tags ul {
        display: flex;
        gap: 0.25em;
        margin-right: 0.25em;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="title">
          <h1>{title}</h1>
          <div class="description">
            {description}<br /><br />{roles.map((role) => <li>{role},</li>)}
          </div>
          <div class="date-tags">
            <ul>
              {tags.map((tag) => <li>{tag},</li>)}
            </ul>
            <FormattedDate date={pubDate} />
          </div>
        </div>
        <div class="hero-image">
          {
            heroImage && (
              <img width={1020} height={510} src={heroImage} alt="" />
            )
          }
        </div>
        <div class="prose">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
